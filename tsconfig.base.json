{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"lib": ["es2019", "dom", "esnext.array"],
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es6",
		"types": ["node"],
		"typeRoots": ["@types", "node_modules/@types"],
		"resolveJsonModule": true,
		"paths": {
			"@xapp/api/access-control": ["libs/api/access-control/src/index.ts"],
			"@xapp/api/auth": ["libs/api/auth/src/index.ts"],
			"@xapp/api/config": ["libs/api/config/src/index.ts"],
			"@xapp/api/core": ["libs/api/core/src/index.ts"],
			"@xapp/api/database": ["libs/api/database/src/index.ts"],
			"@xapp/api/files": ["libs/api/files/src/index.ts"],
			"@xapp/api/mail": ["libs/api/mail/src/index.ts"],
			"@xapp/react": ["libs/react/src/index.ts"],
			"@xapp/shared/api": ["libs/shared/api/src/index.ts"],
			"@xapp/shared/assets": ["libs/shared/assets/src/index.ts"],
			"@xapp/shared/config": ["libs/shared/config/src/index.ts"],
			"@xapp/shared/exceptions": ["libs/shared/exceptions/src/index.ts"],
			"@xapp/shared/types": ["libs/shared/types/src/index.ts"],
			"@xapp/shared/utils": ["libs/shared/utils/src/index.ts"],
			"@xapp/state": ["libs/state/src/index.ts"],
			"@xapp/state/account": ["libs/state/account/src/index.ts"],
			"@xapp/state/global": ["libs/state/global/src/index.ts"],
			"@xapp/state/household": ["libs/state/household/src/index.ts"],
			"@xapp/state/shared": ["libs/state/shared/src/index.ts"],
			"@xapp/state/todo": ["libs/state/todo/src/index.ts"],
			"@xapp/state/auth": ["libs/state/auth/src/index.ts"],
			"@xapp/state/task": ["libs/state/task/src/index.ts"],
			"@xapp/state/task-template": ["libs/state/taskTemplate/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
